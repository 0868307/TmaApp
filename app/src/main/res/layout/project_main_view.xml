<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        app:layout_widthPercent="70%"
        app:layout_heightPercent="10%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of the Project"
        android:id="@+id/projectName"
        android:layout_weight="0.15"
        android:layout_alignBottom="@+id/totalPointsProject"

        android:layout_alignWithParentIfMissing="false" />

    <TextView
        app:layout_widthPercent="30%"
        app:layout_heightPercent="10%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="total points of the project"
        android:id="@+id/totalPointsProject"
        android:layout_gravity="right"
        android:layout_weight="0.03"
        android:layout_marginBottom="166dp" />

    <ListView
        app:layout_widthPercent="100%"
        app:layout_heightPercent="60%"
        app:layout_marginTopPercent="10%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/issuesListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        app:layout_widthPercent="100%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="70%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rankings"
        android:id="@+id/buttonToRanking"
        android:layout_below="@+id/issuesListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        app:layout_widthPercent="100%"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="80%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/buttonToHome"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</android.support.percent.PercentFrameLayout>